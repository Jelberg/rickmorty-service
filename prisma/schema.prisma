generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum CharStatus {
  ACTIVE
  SUSPENDED
}

enum EpisStatus {
  CANCELLED
  ACTIVE
}

model CHARACTERS {
  char_id     Int        @id @default(autoincrement())
  char_status CharStatus @default(ACTIVE)
}

model EPISODES {
  epis_id       Int        @id @default(autoincrement())
  epis_duration Int
  epis_status   EpisStatus @default(ACTIVE)
}

model SUBCATEGORIES {
  subc_id       Int       @id @default(autoincrement())
  subc_name     String
  subc_fk_cate  CATEGORIES @relation(fields: [subc_fk_cate], references: [cate_id])
}

model CATEGORIES {
  cate_id       Int      @id @default(autoincrement())
  cate_name     String
}

model TIMES {
  time_id     Int      @id @default(autoincrement())
  time_init   DateTime
  time_finish DateTime
}

model EPIS_CHAR {
  ec_id       Int         @id @default(autoincrement())
  ec_duration Int
  ec_fk_char  CHARACTERS  @relation(fields: [ec_fk_char], references: [char_id])
  ec_fk_epis  EPISODES    @relation(fields: [ec_fk_epis], references: [epis_id])
  ec_fc_time  TIMES       @relation(fields: [ec_fc_time], references: [time_id])
}

model SUBC_CHAR_EPIS {
  sce_id      Int         @id @default(autoincrement())
  sce_fk_char CHARACTERS    @relation(fields: [sce_fk_char], references: [char_id])
  sce_fk_subc SUBCATEGORIES @relation(fields: [sce_fk_subc], references: [subc_id])
  sce_fk_epis EPISODES      @relation(fields: [sce_fk_epis], references: [epis_id])

  @@unique([sce_fk_char, sce_fk_subc, sce_fk_epis]) // Garantiza la unicidad de esta combinaci√≥n
}
